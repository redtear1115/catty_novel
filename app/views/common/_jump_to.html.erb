<div id="jump-to">
  <%= form_tag read_path, method: :get do %>
    <%= hidden_field_tag :novel_id, @novel.id %>
    <%= label_tag :chapter_number, '跳至' %>
    <%= text_field_tag :chapter_number, nil, size: 4, maxlength: 6 %>
    <%= submit_tag 'go', class: 'btn btn-primary', onclick: "pageChangeHandler(#{@novel.id}, $('#chapter_number').val())" %>
  <% end %>
</div>
