<div id="operation">
  <h2>書籍</h2>
  <table>
    <tr>
      <th>目錄</th>
      <th class="colleciton-actions">
        <%=link_to('添加', new_novel_path)%> |
        <%=link_to('查詢', search_path)%>
      </th>
    </tr>
  <% @novels.each do |novel| %>
    <tr>
      <td>[<%= novel.catgory%>] <%= novel.author%> - <%= novel.name%> (<%= novel.chapters.count%>)</td>
      <td class="colleciton-actions">
        <%=novel.available? ? link_to('加入收藏', add_to_collection_path(novel_id: novel.id)) : '處理中'%>
      </td>
    </tr>
  <% end %>
  </table>
  <%= paginate @novels %>
</div>