<div id="operation">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email %> 
  </div>
  <div class="field">
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %> 
  </div>
  <div class="field">
    <%= f.password_field :password, autocomplete: "off" %>
  </div>
  

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>
</div>